<h1>Se connecter</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="formulaire">
        <%= link_to(user_google_oauth2_omniauth_authorize_path) do %>
          <p class="btn btn-danger google-btn">
            <img src="https://img.icons8.com/small/64/000000/google-logo.png" style="height: 20px"> </img> Log in with Google
          </p>
        <% end %>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <div class="case">
              <%= f.input :remember_me, class: "casecocher" ,as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-block btn-success" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
