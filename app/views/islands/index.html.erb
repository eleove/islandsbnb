<div
  id="map"
  style="width: 100%;
  height: 500px;"
  data-coordinates="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="container" >
  <div class="row">

    <% @islands.each do |island| %>
      <div class="col-md-4">
        <div class="card-trip">
          <%= link_to "", island_path(island) %>
          <!-- <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg"> -->
          <%= cl_image_tag island.photo %>
          <div class="card-trip-infos">
            <div class="joseph-papa">
              <h2><%= island.title %></h2>
              <p><%= island.description %></p>
            </div>
              <h2 class="card-trip-pricing"><%= island.price_per_night %>$
              </h2>
              <!-- <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/> -->
              <%= cl_image_tag island.user.avatar, class: "card-trip-user avatar-bordered", :transformation=>[
                  {:width=>1000, :height=>1000, :gravity=>"face", :radius=>"max", :crop=>"crop"},
                  {:width=>1000, :crop=>"scale"}
                  ] %>
          </div>
        </div>
      </div>

    <% end %>

  </div>
</div>
