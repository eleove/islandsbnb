<%= simple_form_for @island do |f| %>
  <%= f.input :title, label: "Nom de l'île", placeholder: "Entrer une île..." %>
  <%= f.input :description, placeholder: "Décrivez l'île..."%>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :price_per_night, label: 'Prix par nuit', placeholder: "Saisir un prix..." %>

  <%= f.submit "Créer", class: "btn btn-block btn-success" %>
<% end %>


